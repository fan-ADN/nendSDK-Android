<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="3sp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">
        <RelativeLayout
            android:id="@+id/ad"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="16dp">
            <net.nend.android.NendAdNativeMediaView
                android:id="@+id/ad_mediaview"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_toRightOf="@id/native_video_ad_image"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:id="@+id/ad_advertiser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:layout_toRightOf="@+id/ad_mediaview"
                android:padding="8dp"
                android:background="#027e00"
                android:layout_marginBottom="16dp" />
            <TextView
                android:id="@+id/ad_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3b5998"
                android:layout_below="@+id/ad_advertiser"
                android:layout_toRightOf="@+id/ad_mediaview"
                android:layout_marginBottom="16dp" />
            <TextView
                android:id="@+id/ad_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@+id/ad_title"
                android:layout_toRightOf="@+id/ad_mediaview"
                android:textColor="@android:color/white"
                android:background="@drawable/orange_button" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>