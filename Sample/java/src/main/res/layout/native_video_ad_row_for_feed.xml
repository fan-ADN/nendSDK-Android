<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <net.nend.android.NendAdNativeMediaView
        android:id="@+id/native_video_ad_for_feed_video"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:adjustViewBounds="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/native_video_ad_for_feed_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/native_video_ad_for_feed_video"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/native_video_ad_for_feed_advertiser_name"
        android:layout_marginStart="16dp"
        app:layout_constrainedWidth="true"/>
    <TextView
        android:id="@+id/native_video_ad_for_feed_advertiser_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_alignParentBottom="true"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/native_video_ad_for_feed_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/native_video_ad_for_feed_video"
        android:layout_marginStart="16dp"
        app:layout_constrainedWidth="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>
