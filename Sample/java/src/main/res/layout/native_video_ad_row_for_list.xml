<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="horizontal">
    <net.nend.android.NendAdNativeMediaView
        android:id="@+id/native_video_ad_mediaview"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:adjustViewBounds="false"
        />
    <ImageView
        android:id="@+id/native_video_ad_imageview"
        android:visibility="gone"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="false"
        android:layout_toRightOf="@id/native_video_ad_mediaview"
        />
    <TextView
        android:id="@+id/native_video_ad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/native_video_ad_imageview"
        />
    <TextView
        android:id="@+id/native_video_ad_advertiser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/native_video_ad_imageview"
        android:layout_below="@id/native_video_ad_title"
        android:textSize="10sp"
        />
</RelativeLayout>